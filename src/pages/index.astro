  <section id="photos">
    <div class="photo-section-headline hidden logo">
      <h1>Realizacje</h1>
    </div>
    <div class="photos-container hidden logo">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <Image
              src={photo_1}
              loading="lazy"
              alt="Rury na Suficie"
              width={1360}
              height={1020}
            />
          </div>
          <div class="swiper-slide">
            <Image
              src={photo_2}
              loading="lazy"
              alt="System Orurowania"
              width={1360}
              height={1020}
            />
          </div>
          <div class="swiper-slide">
            <Image
              src={photo_3}
              loading="lazy"
              alt="System"
              width={1360}
              height={1020}
            />
          </div>
          <div class="swiper-slide">
            <Image
              src={photo_4}
              loading="lazy"
              alt="System rur"
              width={1360}
              height={1020}
            />
          </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </section>

  <section id="location">
    <h1 class="hidden logo">Znajdź Nas!</h1>

    <iframe
      class="google-map hidden logo"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2362.5144178124174!2d17.52294131580203!3d53.691279256519316!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470247c9a2924e33%3A0x53d8ccd45442f033!2sTopole%2011%2C%2089-600%20Chojnice!5e0!3m2!1sen!2spl!4v1678659172594!5m2!1sen!2spl"
      style="display:flex;"
      allowfullscreen=""
      title="Mapa Google Lokalizacja"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
    <h3 class="map-text">
      Zlokalizowani na pomorzu, realizujemy zlecenia w całej Polsce oraz Europie
    </h3>
  </section>

  <section id="contact">
    <h1 class="logo hidden">Jak możemy pomóc?</h1>
    <div class="contact-card logo hidden">
      <div class="contact-info">
        <Image
          src={photo_1}
          alt="Profile"
          class="image-class"
          width={1360}
          height={1020}
        />
        <h4>Piotr</h4>
        <p>Właściciel</p>
        <p>Telefon: <a href="tel:+48 794 724 857">+48 794 724 857</a></p>
        <p>
          Email: <a href="mailto:biuromacar@gmail.com">biuromacar@gmail.com</a>
        </p>
      </div>
    </div>
  </section>

  <section id="schedule">
    <h1 class="logo hidden">Zapraszamy!</h1>
    <table class="schedule-table logo hidden">
      <thead>
        <tr>
          <th>Dzień Tygodnia</th>
          <th>Godzina Otwarcia</th>
          <th>Godzina Zamknięcia</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Poniedziałek</td>
          <td>8:00</td>
          <td>18:00</td>
        </tr>
        <tr>
          <td>Wtorek</td>
